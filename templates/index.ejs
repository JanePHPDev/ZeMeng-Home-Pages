<%- include('partials/header') -%>

<!-- ===== 首屏 ===== -->
<section class="hero">
  <div>
    <img src="http://q2.qlogo.cn/headimg_dl?dst_uin=417158478&spec=640" class="avatar" alt="avatar">
    <div class="name">JanePHPDev</div>
    <div class="bio">PHP/Vue3全栈，热衷于公益事业，喜欢咖啡</div>
    <div class="social">
      <a href="https://github.com/JanePHPDev" target="_blank" title="GitHub"><i class="fa fa-github"></i></a>
      <a href="https://qm.qq.com/q/zQjuUYuWJy" target="_blank" title="qq"><i class="fa fa-qq"></i></a>
      <a href="mailto:master@zeapi.ink" title="Email"><i class="fa fa-envelope"></i></a>
    </div>
  </div>
</section>
<section class="py-5">
  <div class="container">
    <h2 class="section-title">最新文章</h2>
    <div class="row g-4">
      <% if (posts && posts.length > 0) { %>
        <% posts.slice(0, 6).forEach(post => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100 card-hover" style="transition:.3s;">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text text-muted small">
                  <i class="fa fa-calendar"></i> <%= formatDate(post.date) %>
                  <% if (post.categories) { %>
                    | <i class="fa fa-folder"></i> <%= post.categories %>
                  <% } %>
                </p>
                <p class="card-text"><%= post.excerpt %></p>
                <a href="/<%= post.url %>" class="btn btn-sm btn-outline-primary">阅读全文</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center text-muted">暂无文章</div>
      <% } %>
    </div>
    <% if (posts.length > 6) { %>
      <div class="text-center mt-4">
        <a href="/post.html" class="btn btn-primary">查看所有文章</a>
      </div>
    <% } %>
  </div>
</section>
